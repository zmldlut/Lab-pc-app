<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zml"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" >
    </uses-permission>

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:name="com.zml.base.BaseApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.zml.ui.UiWelcome"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.zml.ui.UiLogin" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zml.ui.UiIndex"
            android:label="@string/title_activity_ui_index" >
        </activity>
        <activity
            android:name="com.zml.ui.UiAbout"
            android:label="@string/title_activity_ui_index" >
        </activity>
        <activity
            android:name="com.zml.ui.UiReport"
            android:label="@string/title_activity_ui_index" >
        </activity>
        <activity
            android:name="com.zml.ui.UiPassword"
            android:label="@string/title_activity_ui_index" >
        </activity>
        <activity
            android:name="com.zml.ui.UiOrder"
            android:label="@string/title_activity_ui_index" >
        </activity>
    </application>

</manifest>
